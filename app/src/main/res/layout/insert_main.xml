<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bt_1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/insert_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="가계부 입력"
            android:textColor="#000000"
            android:layout_margin="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="0.2sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="15sp">

            <com.rey.material.widget.Button
                android:id="@+id/insert_btn_day"
                style="@style/RaiseColorButtonRippleStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:text="날짜"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10sp"
                app:rd_delayClick="afterRelease" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1"/>

            <com.rey.material.widget.Button
                android:id="@+id/insert_btn_time"
                style="@style/RaiseColorButtonRippleStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:text="시간"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                android:textColor="#FFFFFF"
                android:layout_marginRight="10sp"
                app:rd_delayClick="afterRelease" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="15sp">

            <TextView
                android:id="@+id/insert_text_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="0000.00.00"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/insert_text_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="00:00"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginRight="10sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="0.2sp"/>

            <com.rey.material.widget.EditText
                style="@style/Material.Widget.EditText.Light"
                android:id="@+id/textfield_et_char_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:textColor="#FF000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:inputType="textMultiLine"
                android:hint="지출 물건"
                app:et_inputId="@+id/textfield_et_char_counter_input"
                app:et_labelTextColor="@drawable/color_label"
                app:et_supportMode="charCounter"
                app:et_supportMaxChars="20"
                app:et_supportTextErrorColor="#FFFF0000"
                app:et_dividerErrorColor="#FFFF0000"
                android:ems="20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="0.2sp"/>

        <com.rey.material.widget.Spinner
            style="@style/Material.Widget.Spinner.Light"
            android:id="@+id/spinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="128dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:rd_enable="true"
            app:rd_delayClick="none"
            app:spn_labelEnable="true"
            app:spn_label="Spinner with arrow"
            app:spn_arrowSwitchMode="true"
            app:spn_arrowAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowInterpolator="@android:anim/decelerate_interpolator"
            android:layout_margin="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="0.2sp"/>

        <com.rey.material.widget.EditText
            style="@style/Material.Widget.EditText.Light"
            android:id="@+id/textfield_et_char_counter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:inputType="textMultiLine"
            android:hint="지출 물건"
            app:et_inputId="@+id/textfield_et_char_counter_input"
            app:et_labelTextColor="@drawable/color_label"
            app:et_supportMode="charCounter"
            app:et_supportMaxChars="100"
            app:et_supportTextErrorColor="#FFFF0000"
            app:et_dividerErrorColor="#FFFF0000"
            android:layout_margin="20sp"
            android:lines="3"
            android:ems="100"/>


    </LinearLayout>


</LinearLayout>



